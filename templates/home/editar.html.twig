{% extends 'base.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/1.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/crear.css') }}">
        <link rel="stylesheet" media="screen and (min-width: 700px)" href="{{ asset('css/crear1.css') }}">
{% endblock %}

{% block body %}

{% if proveedor != null %}

        <div class="a">
                <div class="form">
                        <h3 class="mb-3 mt-3">Editar proveedor</h3>
                        {% for message in app.flashes('exito') %}
                                <div class="alert alert-succes">
                                        {{message}}
                                </div>
                        {% endfor %}
                        {% if error != '' %}
                                {{error}}
                        {% endif %}
                        {{form_start(form)}}
                        {{form_end(form)}}
                </div>
        </div>

{% endif %}

{% endblock %}