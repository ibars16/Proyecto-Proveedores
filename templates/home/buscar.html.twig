{% extends 'base.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/crear.css') }}">
        <link rel="stylesheet" href="{{ asset('css/1.css') }}">
        <link rel="stylesheet" media="screen and (min-width: 1200px)" href="{{ asset('css/crear1.css') }}">
{% endblock %}
{% block body %}

<div class="a">
 <div class="form">
                        {% if buscar == 'borrar' %}
                                <h3 class="mb-3 mt-3">Buscar proveedor para eliminar</h3>
                        {% else %}
                                <h3 class="mb-3 mt-3">Buscar proveedor para editar</h3>
                        {% endif %}

                        {% if encontrado == true %}
                                <div class="alert alert-succes">
                                        No existe un proveedor con ese ID
                                </div>
                        {% endif %}
                        {% for message in app.flashes('exito') %}
                                <div class="alert alert-succes">
                                        {{message}}
                                </div>
                        {% endfor %}
                        {{form_start(form)}}
                        {{form_end(form)}}
        </div>
        <div class ="b">
                <table class="default">
                        <h3 class="titulo">Información proveedores</h3>
                        <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Correo electrónico</th>
                                <th>Teléfono</th>
                                <th>Tipo</th>
                        </tr>
                        {% for proveedor in proveedores %}  
                                <tr>  
                                        <td>{{proveedor.id}}</td>
                                        <td>{{proveedor.nombre}}</td>
                                        <td>{{proveedor.correoelectronico}}</td>
                                        <td>{{proveedor.telefono}}</td>
                                        <td>{{proveedor.tipoproveedor}}</td> 
                                </tr>
                        {% endfor %}
                </table>
        </div>   
</div>
{% endblock %}
